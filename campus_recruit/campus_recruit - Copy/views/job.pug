extends base

block head 
  script(src='https://js.stripe.com/v3/')

mixin overviewBox (label , text , icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text


//----------------------------

block content 
  //- h1 This is the job detail page
  //- --------- Lec_9 ---------
  section.section-header
    .header__hero
      .header__hero-overlay &nbsp;
      img.header__hero-img(src=`/img/tours/${job.imageCover}`, alt=`${job.name}`)

    .heading-box
      h1.heading-primary
        span= job.name
      .heading-box__group
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-clock')
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-map-pin')
          
    .description-box
      h2.heading-secondary.ma-bt-lg= `About ${job.name} job`


  section.section-cta
    .cta
      .cta__img.cta__img--logo
        img(src='/img/logo-white.png', alt='Job logo')
      .cta__content
        h2.heading-secondary What are you waiting for?
        p.cta__text Apply for the job right now !
        a.btn.btn--green.btn--small(href=`${job.applyLink}`,target='_blank') Apply 


      